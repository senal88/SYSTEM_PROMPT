#!/usr/bin/env bash
# Configuração padrão para o script raycast-setup.sh
# Os valores podem ser sobrescritos via variável de ambiente ou argumentos.

# Diretório onde o backup/export das preferências fica armazenado.
RAYCAST_PROFILE_SRC="${RAYCAST_PROFILE_SRC:-$SCRIPT_DIR/raycast-profile}"

# Diretório onde o Raycast lê suas preferências.
RAYCAST_PROFILE_DST="${RAYCAST_PROFILE_DST:-$HOME/Library/Application Support/com.raycast.macos}"

# Fórmulas do Homebrew que devem ser instaladas (separadas por espaço).
RAYCAST_BREW_FORMULAE="${RAYCAST_BREW_FORMULAE:-1password-cli rsync jq}"

# Aplicativos (casks) que devem ser instalados via Homebrew.
RAYCAST_BREW_CASKS="${RAYCAST_BREW_CASKS:-raycast 1password visual-studio-code docker google-chrome karabiner-elements}"

# Define se o atalho do Spotlight deve ser desativado.
RAYCAST_DISABLE_SPOTLIGHT="${RAYCAST_DISABLE_SPOTLIGHT:-true}"

# Define se o atalho do Raycast deve ser configurado para ⌘ Space.
RAYCAST_SET_HOTKEY="${RAYCAST_SET_HOTKEY:-true}"
