{
  // ==========================================
  // CURSOR 2.0 - CONFIGURAÇÕES GLOBAIS
  // Versão: 2.0.1
  // Compatibilidade: macOS Tahoe 26.0.1, Ubuntu 22.04+
  // ==========================================

  // Editor Base
  "editor.fontSize": 13,
  "editor.fontFamily": "'SF Mono', Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.minimap.renderCharacters": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.glyphMargin": true,
  "editor.lineNumbers": "on",
  "editor.lineNumbersStyle": "relative",
  "editor.renderLineHighlight": "all",
  "editor.selectionHighlight": true,
  "editor.occurrencesHighlight": true,
  "editor.columnSelection": false,
  "editor.mouseWheelZoom": true,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestSelection": "first",
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "top",
  "editor.inlayHints.enabled": "on",
  "editor.inlayHints.fontSize": 11,
  "editor.inlayHints.fontFamily": "'SF Mono', Monaco",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLines": 5,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // Files
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.gitignore": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/.cache": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true
  },
  "files.associations": {
    "*.env*": "dotenv",
    "*.md": "markdown",
    "*.json": "jsonc"
  },

  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/.venv": true,
    "**/dist": true,
    "**/.git": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  "search.useGlobalIgnoreFiles": true,
  "search.useIgnoreFiles": true,
  "search.smartCase": true,

  // Explorer
  "explorer.autoReveal": true,
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.tabCloseButton": "right",
  "workbench.editor.tabSizing": "fit",
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.commandPalette.history": 50,
  "workbench.commandPalette.preserveInput": true,
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": false,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "Default",
  "workbench.colorCustomizations": {
    "editor.background": "#282c34",
    "editor.foreground": "#abb2bf",
    "editorCursor.foreground": "#528b45",
    "editorLineNumber.foreground": "#5c6370",
    "editorLineNumber.activeForeground": "#abb2bf",
    "editor.selectionBackground": "#3e4451",
    "editor.selectionHighlightBackground": "#3e4451",
    "editor.wordHighlightBackground": "#3e4451",
    "editor.wordHighlightStrongBackground": "#3e4451"
  },

  // Terminal
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.fontFamily": "'SF Mono', Monaco",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",

  // Extensions
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,

  // Git
  "git.enabled": true,
  "git.autoStash": true,
  "git.autofetch": true,
  "git.autorefresh": true,
  "git.branchValidationRegex": "^(?!-)[a-zA-Z0-9/_.-]+$",
  "git.branchWhitespaceChar": "-",
  "git.confirmSync": true,
  "git.countBadge": "all",
  "git.decorations.enabled": true,
  "git.ignoreRepoLimit": 30,
  "git.ignoreLimitWarning": false,
  "git.showInlineOpenFileAction": true,
  "scm.inputFontSize": 13,

  // Security
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "prompt",
  "security.workspace.trust.banner": "always",

  // Language Specific Settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.rulers": [],
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[bash]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true
  },

  // Python
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "pylint",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,

  // Node.js
  "nodejs.autoDetect": true,
  "npm.autoDetect": true,

  // Cursor AI Specific
  "cursor.ai.enabled": true,
  "cursor.ai.model": "claude-3.5-sonnet",
  "cursor.ai.temperature": 0.7,
  "cursor.ai.maxTokens": 4096,

  // GitHub Copilot (se habilitado)
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.enable": true
}
