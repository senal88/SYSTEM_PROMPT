[
  // ==========================================
  // CURSOR 2.0 - KEYBINDINGS PERSONALIZADOS
  // Versão: 2.0.1
  // Compatibilidade: macOS Tahoe 26.0.1
  // ==========================================

  // Comentários
  {
    "key": "cmd+k cmd+c",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+/",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },

  // Manipulação de Linhas
  {
    "key": "cmd+j",
    "command": "editor.action.joinLines",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+enter",
    "command": "editor.action.insertLineBefore",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+enter",
    "command": "editor.action.insertLineAfter",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+alt+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+alt+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+k",
    "command": "editor.action.deleteLines",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },

  // Seleção Múltipla
  {
    "key": "cmd+d",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  {
    "key": "cmd+k cmd+d",
    "command": "editor.action.moveSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  {
    "key": "cmd+shift+l",
    "command": "editor.action.selectHighlights",
    "when": "editorFocus"
  },

  // Navegação
  {
    "key": "cmd+k cmd+0",
    "command": "workbench.action.foldAll",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+j",
    "command": "workbench.action.unfoldAll",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+l",
    "command": "workbench.action.foldLevel1",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+2",
    "command": "workbench.action.foldLevel2",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k cmd+3",
    "command": "workbench.action.foldLevel3",
    "when": "editorTextFocus"
  },

  // Busca e Substituição
  {
    "key": "cmd+f",
    "command": "actions.find",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "cmd+alt+f",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },

  // Navegação de Arquivos
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen",
    "when": "!inQuickOpen"
  },
  {
    "key": "cmd+shift+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "cmd+e",
    "command": "workbench.action.quickOpenPreviousEditor"
  },
  {
    "key": "cmd+shift+e",
    "command": "workbench.view.explorer"
  },

  // Terminal
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "cmd+shift+`",
    "command": "workbench.action.terminal.new"
  },

  // Painéis
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel",
    "when": "!terminalFocus"
  },
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },

  // Git
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm"
  },

  // Cursor AI
  {
    "key": "cmd+k",
    "command": "cursor.action.chat",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+l",
    "command": "cursor.action.compose",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+shift+l",
    "command": "cursor.action.edit",
    "when": "editorTextFocus"
  },

  // Formatação
  {
    "key": "shift+alt+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },
  {
    "key": "cmd+k cmd+f",
    "command": "editor.action.formatSelection",
    "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus && !editorReadonly"
  },

  // Outros
  {
    "key": "cmd+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+k",
    "command": "editor.action.deleteLines",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+o",
    "command": "workbench.action.gotoSymbol",
    "when": "editorHasSymbolProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.showSymbols",
    "when": "editorHasSymbolProvider && editorTextFocus && !isInEmbeddedEditor"
  }
]
