    <!-- ============================================ -->
    <!-- SEÇÃO 8: SEGURANÇA -->
    <!-- ============================================ -->
    <Seguranca>
        <Secrets>
            <Gerenciamento>1Password CLI</Gerenciamento>
            <Regra>NUNCA commitar secrets em código</Regra>
            <Regra>Usar 1Password para todos os secrets</Regra>
            <Regra>Variáveis de ambiente via .env (não versionado)</Regra>
            <Regra>Tokens via 1Password CLI</Regra>
        </Secrets>
        <Git>
            <GitIgnore>
                <Item>.env</Item>
                <Item>*.secret</Item>
                <Item>*.key</Item>
                <Item>__pycache__/</Item>
                <Item>.DS_Store</Item>
            </GitIgnore>
            <Regra>Não commitar arquivos de configuração local com secrets</Regra>
        </Git>
        <SSH>
            <Acesso>apenas-chaves-publicas</Acesso>
            <ConfigPath>~/.ssh/config</ConfigPath>
        </SSH>
        <Firewall>
            <VPS>UFW configurado</VPS>
            <PortasAbertas>22, 80, 443</PortasAbertas>
        </Firewall>
    </Seguranca>

    <!-- ============================================ -->
    <!-- SEÇÃO 9: PRODUTIVIDADE -->
    <!-- ============================================ -->
    <Produtividade>
        <AtalhosPersonalizados>
            <Raycast>prefixos-personalizados</Raycast>
            <VSCode>snippets-e-keybindings</VSCode>
            <Terminal>aliases-em-zshrc</Terminal>
        </AtalhosPersonalizados>
        <Automacao>
            <ScriptsReutilizaveis>~/Dotfiles/automation_1password/scripts/</ScriptsReutilizaveis>
            <FuncoesShell>comuns</FuncoesShell>
            <Templates>para-novos-projetos</Templates>
        </Automacao>
    </Produtividade>

    <!-- ============================================ -->
    <!-- SEÇÃO 10: TRABALHANDO COM LLMs -->
    <!-- ============================================ -->
    <TrabalhandoComLLMs>
        <PromptEngineering>
            <Regra>Sempre fornecer contexto do ambiente</Regra>
            <Regra>Especificar stack tecnológica</Regra>
            <Regra>Incluir exemplos relevantes</Regra>
            <Regra>Pedir validação de segurança</Regra>
        </PromptEngineering>
        <ContextoCodigo>
            <CodigoExistente>CODE REFERENCES</CodigoExistente>
            <CodigoNovo>MARKDOWN CODE BLOCKS</CodigoNovo>
            <Regra>Nunca misturar formatos</Regra>
        </ContextoCodigo>
        <Validacao>
            <Passo>Verificar compatibilidade com ambiente</Passo>
            <Passo>Validar segurança (sem secrets hardcoded)</Passo>
            <Passo>Confirmar convenções de código</Passo>
            <Passo>Testar em ambiente isolado quando possível</Passo>
        </Validacao>
    </TrabalhandoComLLMs>

