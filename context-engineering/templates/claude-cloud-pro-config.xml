<ClaudeCloudProConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="claude-cloud-pro-config.xsd"
                     versao="1.0.0"
                     dataAtualizacao="2025-01-15">

    <!-- ============================================ -->
    <!-- SEÇÃO 1: INFORMAÇÕES DO PROJETO -->
    <!-- ============================================ -->
    <Projeto>
        <Nome>CLAUDE_CLOUD_PRO_CONFIG</Nome>
        <Descricao>
            Configurações pessoais globais para Claude Cloud Pro.
            Sistema completo de engenharia de contexto para LLMs em múltiplos ambientes:
            macOS Silicon, VPS Ubuntu e GitHub Codespaces.
        </Descricao>
        <Objetivos>
            <Objetivo>Fornecer contexto rico e estruturado para LLMs</Objetivo>
            <Objetivo>Configurar regras específicas por ambiente</Objetivo>
            <Objetivo>Automatizar setup e configuração de ambientes</Objetivo>
            <Objetivo>Integrar com ferramentas de produtividade (1Password, GitHub, Hugging Face)</Objetivo>
        </Objetivos>
        <Versao>1.0.0</Versao>
    </Projeto>

    <!-- ============================================ -->
    <!-- SEÇÃO 2: IDENTIFICAÇÃO DO USUÁRIO -->
    <!-- ============================================ -->
    <Usuario>
        <NomeCompleto>Luiz Fernando Moreira Sena</NomeCompleto>
        <NomePreferido>Sena</NomeCompleto>
        <Email>luiz.sena88@icloud.com</Email>
        <IdiomaPadrao>pt-BR</IdiomaPadrao>
        <FusoHorario>America/Sao_Paulo</FusoHorario>
    </Usuario>

    <!-- ============================================ -->
    <!-- SEÇÃO 3: CONFIGURAÇÕES GLOBAIS -->
    <!-- ============================================ -->
    <ConfiguracoesGlobais>
        <!-- Configurações de Idioma e Localização -->
        <Localizacao>
            <Idioma>pt-BR</Idioma>
            <FormatoData>ISO 8601 (YYYY-MM-DD)</FormatoData>
            <FormatoHora>24h</FormatoHora>
            <Encoding>UTF-8</Encoding>
        </Localizacao>

        <!-- Configurações de Modelo Claude -->
        <ModeloClaude>
            <ModeloRecomendado>claude-sonnet-4.5</ModeloRecomendado>
            <ModelosAlternativos>
                <Modelo nome="claude-opus-4.0" uso="analises-complexas"/>
                <Modelo nome="claude-haiku-3.5" uso="tarefas-rapidas"/>
            </ModelosAlternativos>
            <CapacidadeContexto>200000</CapacidadeContexto>
            <TokensUnidade>tokens</TokensUnidade>
        </ModeloClaude>

        <!-- Configurações de Resposta -->
        <Respostas>
            <Idioma>pt-BR</Idioma>
            <Estilo>claro-e-objetivo</Estilo>
            <ComentariosCodigo>pt-BR</ComentariosCodigo>
            <Explicacoes>detalhadas</Explicacoes>
        </Respostas>
    </ConfiguracoesGlobais>

    <!-- ============================================ -->
    <!-- SEÇÃO 4: PREFERÊNCIAS DO USUÁRIO -->
    <!-- ============================================ -->
    <PreferenciasUsuario>
        <!-- Preferências de Notificações -->
        <Notificacoes>
            <ConclusaoResposta ativo="true">
                <Descricao>Ser notificado quando Claude terminar uma resposta</Descricao>
                <Uso>Mais útil para tarefas de longa duração como chamadas de ferramentas, Pesquisa e Claude Code Remote</Uso>
            </ConclusaoResposta>
            <EmailCodeRemote ativo="true">
                <Descricao>Receber email quando o Claude Code Remote terminar de compilar ou precisar da resposta</Descricao>
            </EmailCodeRemote>
        </Notificacoes>

        <!-- Preferências de Formatação de Código -->
        <FormatacaoCodigo>
            <Python>
                <Formatador>black</Formatador>
                <LinhaMaxima>100</LinhaMaxima>
                <Imports>isort</Imports>
                <TypeHints>sempre</TypeHints>
                <Docstrings>pt-BR</Docstrings>
                <Naming>
                    <Variaveis>snake_case</Variaveis>
                    <Funcoes>snake_case</Funcoes>
                    <Classes>PascalCase</Classes>
                </Naming>
            </Python>
            <Shell>
                <Compatibilidade>bash-e-zsh</Compatibilidade>
                <Variaveis>UPPER_SNAKE_CASE</Variaveis>
                <Funcoes>snake_case</Funcoes>
                <Shebang>#!/bin/bash</Shebang>
                <TratamentoErros>set -euo pipefail</TratamentoErros>
            </Shell>
            <Documentacao>
                <Idioma>pt-BR</Idioma>
                <IncluirExemplos>true</IncluirExemplos>
                <IncluirTroubleshooting>true</IncluirTroubleshooting>
            </Documentacao>
        </FormatacaoCodigo>

        <!-- Preferências de Arquivos e Diretórios -->
        <ArquivosDiretorios>
            <NomesSemEspacos>true</NomesSemEspacos>
            <NomesSemAcentos>true</NomesSemAcentos>
            <FormatoData>ISO 8601</FormatoData>
            <Encoding>UTF-8</Encoding>
        </ArquivosDiretorios>
    </PreferenciasUsuario>

    <!-- ============================================ -->
    <!-- SEÇÃO 5: CONFIGURAÇÕES DE AMBIENTES -->
    <!-- ============================================ -->
    <Ambientes>
        <!-- Ambiente macOS Silicon (Dev) -->
        <Ambiente nome="macos-silicon" tipo="dev">
            <Identificacao>
                <Hostname>MacBook-Pro</Hostname>
                <OS>macOS</OS>
                <VersaoOS>darwin 25.0.0</VersaoOS>
                <Arquitetura>arm64</Arquitetura>
                <Shell>zsh</Shell>
                <ShellPath>/bin/zsh</ShellPath>
                <Usuario>luiz.sena88</Usuario>
                <Home>/Users/luiz.sena88</Home>
            </Identificacao>
            <EstruturaDiretorios>
                <Dotfiles>~/Dotfiles</Dotfiles>
                <Config>~/.config</Config>
                <Projeto>~/database/BNI_DOCUMENTOS_BRUTOS</Projeto>
            </EstruturaDiretorios>
            <Ferramentas>
                <GerenciadorPacotes>Homebrew</GerenciadorPacotes>
                <HomebrewPath>/opt/homebrew/bin</HomebrewPath>
                <Python>Pyenv</Python>
                <Node>NVM</Node>
                <Conda>Micromamba</Conda>
            </Ferramentas>
            <Portas>
                <Traefik>80, 443, 8080</Traefik>
                <Portainer>9443</Portainer>
                <PostgreSQL>5432</PostgreSQL>
                <NocoDB>8081</NocoDB>
                <N8N>5678</N8N>
                <Grafana>3000</Grafana>
                <Redis>6379</Redis>
                <DifyAPI>5001</DifyAPI>
                <DifyWeb>3001</DifyWeb>
            </Portas>
        </Ambiente>

        <!-- Ambiente VPS Ubuntu (Prod) -->
        <Ambiente nome="vps-ubuntu" tipo="prod">
            <Identificacao>
                <OS>Ubuntu Linux</OS>
                <Shell>bash</Shell>
                <ShellAlternativo>zsh</ShellAlternativo>
            </Identificacao>
            <EstruturaDiretorios>
                <Dotfiles>~/Dotfiles</Dotfiles>
                <Config>~/.config</Config>
                <Infra>~/infra</Infra>
            </EstruturaDiretorios>
            <Ferramentas>
                <GerenciadorPacotes>apt</GerenciadorPacotes>
            </Ferramentas>
            <Portas>
                <HTTP>80</HTTP>
                <HTTPS>443</HTTPS>
                <SSH>22</SSH>
            </Portas>
            <Seguranca>
                <Firewall>UFW</Firewall>
                <PortasAbertas>22, 80, 443</PortasAbertas>
            </Seguranca>
        </Ambiente>

        <!-- Ambiente GitHub Codespaces -->
        <Ambiente nome="codespace" tipo="dev">
            <Identificacao>
                <Plataforma>GitHub Codespaces</Plataforma>
                <Setup>automatico</Setup>
            </Identificacao>
            <EstruturaDiretorios>
                <Dotfiles>~/Dotfiles</Dotfiles>
                <DevContainer>.devcontainer</DevContainer>
            </EstruturaDiretorios>
        </Ambiente>
    </Ambientes>

    <!-- ============================================ -->
    <!-- SEÇÃO 6: STACK TECNOLÓGICA -->
    <!-- ============================================ -->
    <StackTecnologica>
        <Backend>
            <Python versao="3.11+"/>
            <NodeJS versao="LTS"/>
            <Docker versao="latest"/>
            <DockerCompose versao="v2+"/>
        </Backend>
        <BancoDados>
            <PostgreSQL versao="16-alpine"/>
            <Redis versao="alpine"/>
        </BancoDados>
        <Infraestrutura>
            <Traefik versao="v2.10" uso="reverse-proxy"/>
            <Portainer versao="latest" uso="gerenciamento-docker"/>
            <NocoDB versao="latest" uso="base-dados-no-code"/>
            <N8N versao="latest" uso="automacao"/>
            <Grafana versao="latest" uso="monitoramento"/>
            <Dify versao="latest" uso="llm-platform"/>
        </Infraestrutura>
        <DevOps>
            <OnePassword versao="v2.24.0+"/>
            <Git configurado="true"/>
            <SSH configurado="true"/>
            <Terraform planejado="true"/>
        </DevOps>
        <Automatizacao>
            <Scripts>bash/zsh</Scripts>
            <Linguagem>Python</Linguagem>
            <Plataforma>n8n</Plataforma>
        </Automatizacao>
    </StackTecnologica>

