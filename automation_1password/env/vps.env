# ‚öôÔ∏è Carrega configura√ß√£o compartilhada
source "$(dirname "${BASH_SOURCE[0]}")/shared.env"

# 1Password Connect Configuration
export OP_VAULT="$OP_VAULT_VPS"
export OP_CONNECT_HOST_VPS="${OP_CONNECT_HOST_VPS:-http://localhost:8080}"
export OP_CONNECT_HOST="$OP_CONNECT_HOST_VPS"

# Environment
export OP_ENVIRONMENT="${OP_ENVIRONMENT:-production}"
export OP_REGION="${OP_REGION:-$OP_REGION_DEFAULT}"

# Logging
export OP_LOG_LEVEL="${OP_LOG_LEVEL:-warn}"
export OP_LOG_FILE="${OP_LOG_FILE:-$OP_LOG_DIR/automation.log}"

# Security (VPS defaults)
export OP_SESSION_TIMEOUT="${OP_SESSION_TIMEOUT:-1800}"
export OP_VAULT_TIMEOUT="${OP_VAULT_TIMEOUT:-900}"

if [[ -n "${OP_CONNECT_TOKEN_VPS:-}" ]]; then
  export OP_CONNECT_TOKEN="$OP_CONNECT_TOKEN_VPS"
fi
