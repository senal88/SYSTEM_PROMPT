# ‚öôÔ∏è Carrega configura√ß√£o compartilhada
source "$(dirname "${BASH_SOURCE[0]}")/shared.env"

# 1Password Connect Configuration
export OP_VAULT="$OP_VAULT_MACOS"
export OP_CONNECT_HOST_MACOS="${OP_CONNECT_HOST_MACOS:-http://localhost:8080}"
export OP_CONNECT_HOST="$OP_CONNECT_HOST_MACOS"

# Environment
export OP_ENVIRONMENT="${OP_ENVIRONMENT:-development}"
export OP_REGION="${OP_REGION:-$OP_REGION_DEFAULT}"

# Logging
export OP_LOG_LEVEL="${OP_LOG_LEVEL:-info}"
export OP_LOG_FILE="${OP_LOG_FILE:-$OP_LOG_DIR/automation.log}"

# Security (macOS defaults)
export OP_SESSION_TIMEOUT="${OP_SESSION_TIMEOUT:-1800}"
export OP_VAULT_TIMEOUT="${OP_VAULT_TIMEOUT:-900}"

# Se o token espec√≠fico j√° estiver carregado no shell, replica para a vari√°vel gen√©rica
if [[ -n "${OP_CONNECT_TOKEN_MACOS:-}" ]]; then
  export OP_CONNECT_TOKEN="$OP_CONNECT_TOKEN_MACOS"
fi
