# 1Password CLI Configuration
export OP_ACCOUNT_DOMAIN="${OP_ACCOUNT_DOMAIN:-my.1password.com}"
export OP_DEFAULT_EMAIL="${OP_DEFAULT_EMAIL:-luiz.sena88@icloud.com}"

# Common Paths
export DOTFILES_HOME="${DOTFILES_HOME:-$HOME/Dotfiles}"
export AUTOMATION_ROOT="${AUTOMATION_ROOT:-$DOTFILES_HOME/automation_1password}"
export OP_SCRIPTS_DIR="${OP_SCRIPTS_DIR:-$AUTOMATION_ROOT/scripts}"
export OP_LOG_DIR="${OP_LOG_DIR:-$AUTOMATION_ROOT/logs}"
export OP_LOG_FILE="${OP_LOG_FILE:-$OP_LOG_DIR/automation.log}"

# Vault mapping
export OP_VAULT_MACOS="${OP_VAULT_MACOS:-1p_macos}"
export OP_VAULT_VPS="${OP_VAULT_VPS:-1p_vps}"
export OP_VAULT_SHARED="${OP_VAULT_SHARED:-1p_shared}"

# Common Environment Variables
export OP_DEBUG="${OP_DEBUG:-false}"
export OP_VERBOSE="${OP_VERBOSE:-false}"
export OP_JSON="${OP_JSON:-true}"
export OP_REGION_DEFAULT="${OP_REGION_DEFAULT:-us-central1}"
export OP_SESSION_TIMEOUT="${OP_SESSION_TIMEOUT:-1800}"
export OP_VAULT_TIMEOUT="${OP_VAULT_TIMEOUT:-900}"
export OP_LOG_LEVEL="${OP_LOG_LEVEL:-info}"

# Ensure helper script paths are available when sourcing this file
export PATH="$OP_SCRIPTS_DIR/bootstrap:$OP_SCRIPTS_DIR/connect:$OP_SCRIPTS_DIR/secrets:$OP_SCRIPTS_DIR/validation:$PATH"
