# Atlas CLI - Configuração de Ambiente
# Arquivo de configuração para o Atlas CLI

# Configurações básicas
ATLAS_CLI_VERSION="latest"
ATLAS_CONFIG_DIR="$HOME/.config/atlas-cli"
ATLAS_LOG_LEVEL="info"
ATLAS_AUTO_UPDATE="true"

# Configurações de API
ATLAS_API_BASE_URL="https://api.atlas.anthropic.com"
ATLAS_API_TIMEOUT="30"
ATLAS_API_RETRIES="3"

# Configurações do navegador
ATLAS_BROWSER_HEADLESS="false"
ATLAS_BROWSER_WINDOW_SIZE="1920x1080"
ATLAS_BROWSER_DEFAULT_PROFILE="default"

# Extensões padrão para pinagem
ATLAS_PINNED_EXTENSIONS="Promptheus,WebPilot,AIPRM,CodeRunner,PDFReader,ImageGenerator"

# Configurações de segurança
ATLAS_SANDBOX="true"
ATLAS_ALLOW_UNSAFE_SCRIPTS="false"
ATLAS_CSP="strict"

# Configurações de logging
ATLAS_LOG_FILE="$ATLAS_CONFIG_DIR/atlas.log"
ATLAS_LOG_MAX_SIZE="10MB"
ATLAS_LOG_MAX_FILES="5"

# Configurações de backup
ATLAS_BACKUP_DIR="$HOME/Backups/atlas-cli"
ATLAS_BACKUP_RETENTION_DAYS="30"

# Configurações de monitoramento
ATLAS_MONITOR_INTERVAL="30"
ATLAS_MONITOR_ENABLED="true"

# Configurações de integração
ATLAS_RAYCAST_ENABLED="true"
ATLAS_SHORTCUTS_ENABLED="true"
ATLAS_ALFRED_ENABLED="false"

# Configurações de desenvolvimento
ATLAS_DEV_MODE="false"
ATLAS_DEBUG="false"
ATLAS_VERBOSE="false"

# Exportar variáveis
export ATLAS_CLI_VERSION
export ATLAS_CONFIG_DIR
export ATLAS_LOG_LEVEL
export ATLAS_AUTO_UPDATE
export ATLAS_API_BASE_URL
export ATLAS_API_TIMEOUT
export ATLAS_API_RETRIES
export ATLAS_BROWSER_HEADLESS
export ATLAS_BROWSER_WINDOW_SIZE
export ATLAS_BROWSER_DEFAULT_PROFILE
export ATLAS_PINNED_EXTENSIONS
export ATLAS_SANDBOX
export ATLAS_ALLOW_UNSAFE_SCRIPTS
export ATLAS_CSP
export ATLAS_LOG_FILE
export ATLAS_LOG_MAX_SIZE
export ATLAS_LOG_MAX_FILES
export ATLAS_BACKUP_DIR
export ATLAS_BACKUP_RETENTION_DAYS
export ATLAS_MONITOR_INTERVAL
export ATLAS_MONITOR_ENABLED
export ATLAS_RAYCAST_ENABLED
export ATLAS_SHORTCUTS_ENABLED
export ATLAS_ALFRED_ENABLED
export ATLAS_DEV_MODE
export ATLAS_DEBUG
export ATLAS_VERBOSE
